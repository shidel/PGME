{$M 2048,0,0}
program Install_Exe_Size_Calculator;

var
	F : File;
	T : Text;
	S : LongInt;
	
begin
	{ Calculate EXE Size }
	Assign(F, ParamStr(1));
	Reset(F, 1);
	S := FileSize(F);
	WriteLn('Current Executable file size is: ', S, ' bytes.');
	Close(F);
	Assign(T, 'INSTALL.INC');
	Rewrite(T);
	WriteLn(T, '{ This file is automatically generated by make install. DO NOT EDIT IT! }');
	WriteLn(T);
	WriteLn(T, 'const');
	WriteLn(T, #9'InstallExeSize : LongInt = ', S, '; {Size of actual exe minus data.}');
	Close(T);
end.
